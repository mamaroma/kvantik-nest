<article>
  <h3><%= item.title %></h3>
  <p><time datetime="<%= item.dateISO %>"><%= item.dateHuman %></time> • <%= item.readTime %></p>
  <% if (item.summary) { %>
    <p><%= item.summary %></p>
  <% } %>
  <% if (item.text) { %>
    <p><%= item.text %></p>
  <% } %>
  <footer>Автор: <cite><%= item.author %></cite></footer>
</article>
